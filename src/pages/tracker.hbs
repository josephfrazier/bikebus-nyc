  <body>
        <!-- This is the start of content for our page -->
        <h1>
          {{#if busHeaderImageSrc}}
          <img alt="{{busHeaderImageAlt}}" src="{{busHeaderImageSrc}}" />
          {{else}}
            {{title}}   
          {{/if}}
        </h1>
        <div id="map"></div>
        <h2 id="info">
          {{busRunInfo}} Track the bus live on the map above. <br /> <a href="https://bit.ly/bergenbiketrain">Learn more about the Bergen Bike Train.</a>
        </h2>
        
        <!-- stop markers -->
        {{#each stops}}
          <div id="stop-marker-{{@index}}" class="marker-container">
             <div class="marker-box">
               <div><b>{{this.time}}</b></div>
               
             </div>
             <div class="marker-box marker-box-center">
               {{#if this.icon}}
               <img src="{{this.icon}}" />
               {{else}}
               <img src="https://cdn.glitch.global/6ba8c1b0-9df4-482f-9009-77d10d780dbb/bus_stop_circle.svg?v=1664245520908" />
               {{/if}}
             </div>
             <div class="marker-box">
               <div>
                 <b>{{this.name}}</b> 
                 {{#if this.subtitle}}
                 <br />
                 <span>{{this.subtitle}}</span>
                 {{/if}}
               </div>
             </div>
          </div>
        {{/each}}
        <!-- update_map.js -->
        <script>
            trackBusLocation()
            
            function trackBusLocation()
            {
              getBusLocation();
              setTimeout(function() {
                trackBusLocation();
              }, 10000);
            }
          
            function updateMap(lat, long)
            {
                addBusPositionMarker(lat, long);
            }
        
          
            function getBusLocation()
            {
              fetch('/bus/{{route}}/location', {
                method: 'GET', // or 'PUT'
              })
                .then((response) => response.json())
                .then((data) => {
                  console.log('Success:', data)
                  updateMap(data.latitude, data.longitude)
                })
                .catch((error) => {
                  console.error('Error:', error)
                })
            }
            
        </script>
