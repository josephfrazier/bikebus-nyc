<!DOCTYPE html>
<html lang="en">
  <head>
    
    <!-- 
      This is the main Handlebars template for the site 
      - When the user visits the homepage or submits a color the app calls the endpoints in server.js
      - The server script passes data in here and the Handlebars code builds it into the HTML page
    -->
    
    <meta charset="utf-8" />
    <link rel="icon" href="https://glitch.com/favicon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  
    <title>Bike Bus Beacon</title> 
    
    <style>
      div#conductor-header {
        background-color:white;
        width:100%;
        position:fixed;
        height: 100px;
        top: 0;
      }
      div#conductor-header-spaceholder {
        height:100px;
        padding-top: 0;
      }
      iframe#tracker {
        height: 900px;
        width: 100%;
      }
      span#clock-seconds {
        color: grey;
      }
    </style>
  </head>
  <body>
        <!-- This is the start of content for our page -->
        <div id="conductor-header">
        <h1 class="title">Bike Bus Beacon</h1>
        <h2 id = "clock">
          <span id="clock-hours-minutes"></span>
          <span id="clock-seconds"></span>
        </h2>
        <pre id="location-preview"></pre>
        </div>
        <div id="conductor-header-spaceholder"></div>
        <iframe id="tracker" src="/"> </iframe>
        
      
        <!-- beacon.js -->
        <script>
          
            let id;
            let target;
            let options;

            function success(pos) {
              busLatitude = pos.coords.latitude;
              busLongitude = pos.coords.longitude;
              
              updateBusLocation(busLatitude, busLongitude);
            }

            function error(err) {
              console.error(`ERROR(${err.code}): ${err.message}`);
            }

            options = {
              enableHighAccuracy: true,
              //timeout: 5000,
              maximumAge: 5000,
            };

            id = navigator.geolocation.watchPosition(success, error, options);
          
            const previewElement = document.getElementById('location-preview');
          
            function updateLocationPreview(lat, long)
            {
              const now = new Date();
              let hour = now.getHours();
              let minute = now.getMinutes();
              let seconds = now.getSeconds();
              previewElement.textContent = hour + ":" + minute + ":" + seconds + " " + lat + ", " + long + "\n";
              console.log(lat, long)
            }
          
            const beacon_hash = "{{beacon_hash}}";
            function updateBusLocation(lat, long)
            {
              fetch('/bus/location/'+beacon_hash, {
                method: 'POST', // or 'PUT'
                headers: {
                  'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                  'latitude': lat,
                  'longitude': long
                }),
              })
                .then((response) => response.json())
                .then((data) => {
                  console.log('Success:', data)
                  updateLocationPreview(data.latitude, data.longitude)
                })
                .catch((error) => {
                  console.error('Error:', error)
                })
            }
          
            const clockHoursAndMinutes = document.getElementById('clock-hours-minutes');
            function clock()
            {
              const now = new Date();
              const hour = now.getHours();
              let minute = now.getMinutes();
              let seconds = now.getSeconds();
              clockHoursAndMinutes.textContent = hour + ":" + minute + ":" + seconds;
            }
            clock();
        </script>
  </body>
</html>
